#include <iostream>

int main() 
{
    //dynamic arr that can be deleted
    int *p_scores {new(std::nothrow) int[] {1,2,3,4,5,6,7,8}};
    
    //size of arr that can be deleted
    int *arr_size {new int{sizeof(p_scores)}};
    
    //for-loop to print arr
    for(int i = 0; i < *arr_size; ++i) 
    {
        //if we reach the end, don't print comma
        if(p_scores[i] == 0) {
            break;
        } else {
            std::cout << p_scores[i] << ", " << std::flush;   
        }
    }

    //Delete arr size
    delete arr_size;
    arr_size = nullptr;

    //Delete the whole arr
    delete[] p_scores;
    p_scores = nullptr;

    //Everything is fine, so return 0
    return 0;
}

#include <iostream>

int main() 
{    

    //dynamic arr that can be deleted
    int *p_scores {new(std::nothrow) int[] {1,2,3,4,5,6,7}};

    //Size of arr that can be deleted
    int *arrsize {new int{sizeof(p_scores)};

    //for-loop to print arr
    for(int i = 0; i < arrsize; ++i) 
    {
        //if we reach the end, don't print comma
        if(i == arrsize - 1) {
            std::cout << p_scores[i] << std::flush;
        } else {
            std::cout << p_scores[i] << ", " << std::flush;   
        }
    }

    //Delete the whole arr
    delete[] p_scores;
    p_scores = nullptr;

    //Everything is fine, so return 0
    return 0;
}
